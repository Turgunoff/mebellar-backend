# ===========================================
# MEBELLAR BACKEND CONFIGURATION
# ===========================================

# -----------------
# Database Settings
# -----------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=mebel_user

# ⚠️ IMPORTANT: Change this in production!
DB_PASSWORD=your_secure_password_here

DB_NAME=mebellar_olami

# SSL Mode (REQUIRED in production)
# Options: disable, require, verify-ca, verify-full
DB_SSLMODE=require

# Optional: Path to SSL certificate for verify-full mode
# DB_SSL_ROOT_CERT=/path/to/root.crt

# -----------------
# Database Connection Pool
# -----------------
# Maximum number of open connections to the database
DB_MAX_OPEN_CONNS=25

# Maximum number of idle connections
DB_MAX_IDLE_CONNS=5

# Maximum lifetime of a connection (format: 5m, 1h, 30s)
DB_CONN_MAX_LIFETIME=5m

# Maximum idle time for a connection
DB_CONN_MAX_IDLE_TIME=5m

# -----------------
# Server Settings
# -----------------
SERVER_PORT=8081
STATIC_PORT=8081
GRPC_PORT=50051

# -----------------
# Security (CRITICAL)
# -----------------
# ⚠️ REQUIRED: Minimum 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_LONG_RANDOM_STRING_MIN_32_CHARS

# -----------------
# SMS Service (Eskiz.uz)
# -----------------
# Leave empty for mock mode (development)
ESKIZ_EMAIL=
ESKIZ_PASSWORD=

# -----------------
# Environment
# -----------------
# Options: development, production
ENVIRONMENT=development

# -----------------
# Logging
# -----------------
# Log level: debug, info, warn, error
# Use 'debug' in development, 'info' or 'warn' in production
LOG_LEVEL=info

# -----------------
# AI Translation (Optional)
# -----------------
# Google Gemini API key for AI auto-translation
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

